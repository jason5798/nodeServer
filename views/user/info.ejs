<%- include ../page/header %>
		<div class="row">
			<div class="col-md-8">
				<div class="panel panel-default">
					<div class="panel-heading"><span class="glyphicon glyphicon-edit"></span> 帳戶設定欄</div>
					<div class="panel-body">
						<form id="editDevice" class="form-horizontal" action="" method="post">
							<fieldset>
								<!-- Name input-->
								<div class="form-group">
									<label class="col-md-3 control-label" for="name">帳戶名稱</label>
									<div class="col-md-9">
									<input id="name" name="name" type="text" value="<%= user.name %>"" required="required" class="form-control" disabled="disabled">
									</div>
								</div>

								<!-- Email input-->
								<div class="form-group">
									<label class="col-md-3 control-label" for="password">帳戶密碼</label>
									<div class="col-md-9">
										<input id="password" name="password" type="password" value="<%= user.password %>"  required="required" class="form-control">
									</div>
								</div>

								<div class="form-group">
									<label class="col-md-3 control-label" for="email">帳戶信箱</label>
									<div class="col-md-9">
										<input id="email" name="email" type="email" value="<%= user.email %>" required="required" class="form-control" disabled="disabled">
									</div>
								</div>

								<!-- Form actions -->
								<div class="form-group">
									<div class="col-md-12 widget-right">
										<button type="submit" name="edit" class="btn btn-primary btn-md pull-right">
									    	 <span class="glyphicon glyphicon-edit">編輯
										</button>
									</div>
								</div>
							</fieldset>
						</form>
					</div>
				</div>

			</div><!--/.col-->

		</div><!--/.row-->


